%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  = render 'steps'
    .text-center.mb-40
      %h3.general-subtitle Thank you for making Order
      %p.fw-300 = "An order confirmation has been sent to #{current_user.email}"
    .row.mb-20
      .col-sm-6
        .visible-xs
          %p.general-order-number.mb-40 = "Order #{@order.number}"
          %p.general-address = @order.completed_at.strftime("%B %-d, %Y")
        %p.general-address
          = "#{@order.shipping.first_name} #{@order.shipping.last_name}"
          %br
          = @order.shipping.address
          %br
          = "#{@order.shipping.city} #{@order.shipping.zip}"
          %br
          = @order.shipping.country
          %br
          = "Phone #{@order.shipping.phone}"
      .col-sm-6.hidden-xs.text-right
        %p.general-order-number.mb-0 = "Order #{@order.number}"
        %p.general-address.mb-30 = @order.completed_at.strftime("%B %-d, %Y")
  .visible-xs
    - @order.order_items.each do |oi|
      .general-cart-item.divider-lg
        .general-img-wrap-table
          %img.cart-img-shadow{src: "https://images-na.ssl-images-amazon.com/images/I/81Kq0YS4lzL.jpg", alt: "design-book"}
        %p.title = oi.book.title
        %table
          %tr
            %td
              %span.in-grey-600 Price
            %td
              %span.font-16.in-gold-500 = number_to_dollar oi.book.price
          %tr
            %td.vertical-middle
              %span.in-grey-600 Quantity
            %td
              %span = oi.quantity
          %tr
            %td
              %span.in-grey-600 Subtotal
            %td
              %span.font-16.in-gold-500 = number_to_dollar oi.total
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        - @order.order_items.each do |oi|
          %tr
            %td
              .general-img-wrap-table
                %img.cart-img-shadow.pull-left{src: "https://images-na.ssl-images-amazon.com/images/I/81Kq0YS4lzL.jpg", alt: "design-book"}
            %td
              %p.title= oi.book.title
              %p.in-grey-600.fw-300 = oi.book.description.split('.').first
            %td
              %span.font-16.in-gold-500= number_to_euro oi.book.price
            %td
              %span.ml-30= oi.quantity
            %td
              %span.font-16.in-gold-500= number_to_euro oi.total
    .text-center.general-text-right
      = render 'order_summary', order: @order
    .text-center
      = link_to "Back to Store", root_path, class: "btn btn-default mb-20"
