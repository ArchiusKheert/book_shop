- @order_items.each do |order_item|
  .general-cart-close.divider-lg-bottom
    = button_to order_item, method: :delete, class: 'close general-cart-close' do
      %span{'aria-hidden': "true"} &times;
    .general-img-wrap-table
      %img.cart-img-shadow{src: "https://images-na.ssl-images-amazon.com/images/I/81Kq0YS4lzL.jpg", alt: "design-book"}
    %p.title = order_item.book.title
    %table.table
      %tr
        %td
          %span.in-grey-600 Price
        %td
          %span.font-16.in-gold-500 = "$#{order_item.book.price}"
      %tr
        %td.vertical-middle
          %span.in-grey-600 Quantity
        %td
          = render 'quantity', order_item: order_item
      %tr
        %td
          %span.in-grey-600 Subtotal
        %td
          %span.font-16.in-gold-500 = "$#{order_item.book.price * order_item.quantity}"