%a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = @sort_by || "Newest first"
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li

    = link_to "Newest first", books_path(category_id: @current_category, sort_by: 'created_at DESC')
  %li

    = link_to "Popular first", books_path(category_id: @current_category, sort_by: 'created_at')
  %li

    = link_to "Price: Low to hight", books_path(category_id: @current_category, sort_by: 'price')
  %li

    = link_to "Price: Hight to Low", books_path(category_id: @current_category, sort_by: 'price DESC')
  %li

    = link_to "Title: A to Z", books_path(category_id: @current_category, sort_by: 'title')
  %li

    = link_to "Title: Z to A", books_path(category_id: @current_category, sort_by: 'title DESC')