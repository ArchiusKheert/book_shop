= simple_form_for @book.order_items.build, url: book_order_items_path(@book.id), method: :post do |form|
  .col-xs-12.col-md-4
    %p.h1.in-gold-500.mt-10 = "$#{@book.price}"
  .col-xs-5.col-md-3
    .input-group.general-position
      %a.input-link.pt-7#minus{href: ""}
        %i.fa.fa-minus.line-height-40
      = form.input :book_id, label: false, input_html: {value: @book.id, type: 'hidden'}
      = form.input :quantity, as: :text, label: false, input_html: {value: 1, class: "form-control quantity-input"}
      %a.input-link.pt-7#minus{href: ""}
        %i.fa.fa-plus.line-height-40
  .col-xl-7.col-md-5
    = form.button :submit, 'Add to Cart', class: "btn btn-default pull-right general-position"