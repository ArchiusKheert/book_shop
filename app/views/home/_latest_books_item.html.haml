.row
  .col-sm-5
    .general-img-wrap
      %img.img-shadow.general-thumbnail-img{src: "https://images-na.ssl-images-amazon.com/images/I/81Kq0YS4lzL.jpg", alt: "design-book"}
  .col-sm-7
    .mb-60
      %h1= book.title
      %p.lead= truncate(book.description, length: 150)
      %p.lead.small= book_authors(book)
      .general-align
        = form_for OrderItem.new, method: :post do |form|
          = form.hidden_field :book_id, value: book.id
          = form.hidden_field :quantity, value: 1
          = form.submit 'Buy', class: "btn btn-primary"